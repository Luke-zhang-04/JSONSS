{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [80]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": true,
        "no-console": false,
        "semicolon": false,
        "whitespace": false,
        "no-string-throw": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}