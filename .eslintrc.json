{
    "ecmaVersion": 2020,
    "rules": {
        "max-line-length": {
            "options": [80]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": true,
        "no-console": false,
        "no-string-throw": false,
        "semi": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}